-- Load Fluent Library
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Create Screen GUI
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Create Main Window
local Window = Fluent:CreateWindow({
    Title = "Fluent GUI",
    SubTitle = "by YourName",
    Size = UDim2.fromOffset(600, 500),
})

-- Main Tab
local MainTab = Window:AddTab({ Title = "Main", Icon = "home" })
MainTab:AddButton({
    Title = "Set Speed",
    Callback = function()
        local changeSpeedRemote = ReplicatedStorage.rEvents.changeSpeedSizeRemote
        changeSpeedRemote:InvokeServer("changeSpeed", 200)
    end
})

MainTab:AddButton({
    Title = "Set Size",
    Callback = function()
        local changeSizeRemote = ReplicatedStorage.rEvents.changeSpeedSizeRemote
        changeSizeRemote:InvokeServer("changeSize", 2)
    end
})

-- Misc Tab
local MiscTab = Window:AddTab({ Title = "Misc", Icon = "settings" })
MiscTab:AddToggle({
    Title = "Anti AFK",
    Callback = function(state)
        if state then
            while true do
                LocalPlayer.Idled:Wait()
                LocalPlayer:Move(Vector3.new(0, 0, 0)) -- Prevent AFK
                wait(1)
            end
        end
    end
})

-- Killer Tab
local KillerTab = Window:AddTab({ Title = "Killer", Icon = "skull" })
local AutoHitToggle = KillerTab:AddToggle("Auto Hit", {
    Default = false,
})

_G.autoHitActive = false

local function autoHit()
    while _G.autoHitActive do
        LocalPlayer.muscleEvent:FireServer("punch", "leftHand")
        LocalPlayer.muscleEvent:FireServer("punch", "rightHand")
        wait(0.1)
    end
end

AutoHitToggle:OnChanged(function(state)
    _G.autoHitActive = state
    if state then
        spawn(autoHit)
    end
end)

-- Finalize GUI
Window:SelectTab(1)

-- Notify that the GUI has loaded
Fluent:Notify({
    Title = "Fluent GUI",
    Content = "GUI Loaded Successfully!",
    Duration = 5
})
