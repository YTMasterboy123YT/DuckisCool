local Players = game:GetService("Players")

local function teleportAndHideArms()
    local player = Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()

    -- Teleport players
    for _, p in ipairs(Players:GetPlayers()) do
        if p.Character and p ~= player then
            local targetPosition = character.PrimaryPart.Position + (character.PrimaryPart.CFrame.LookVector * 5) -- Teleport 5 studs in front
            p.Character:SetPrimaryPartCFrame(CFrame.new(targetPosition))
            
            -- Hide arms
            local leftArm = p.Character:FindFirstChild("Left Arm")
            local rightArm = p.Character:FindFirstChild("Right Arm")
            if leftArm and rightArm then
                leftArm.Transparency = 1
                rightArm.Transparency = 1
            end
        end
    end
end

-- Call the function
teleportAndHideArms()
