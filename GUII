local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Fluent GUI",
    SubTitle = "by YourName",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "" }),
    Killer = Window:AddTab({ Title = "Killer", Icon = "settings" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
}

-- Main Tab
Tabs.Main:AddInput("Change Speed", {
    Default = "16",
    Numeric = true,
    Callback = function(Value)
        -- Set player speed
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = tonumber(Value)
    end
})

Tabs.Main:AddInput("Change Size", {
    Default = "1",
    Numeric = true,
    Callback = function(Value)
        -- Set player size
        game.Players.LocalPlayer.Character.Humanoid.Scale.Value = tonumber(Value)
    end
})

Tabs.Main:AddDropdown("Game Time", {
    Options = {"Morning", "Afternoon", "Night"},
    Callback = function(selected)
        if selected == "Morning" then
            game.Lighting.ClockTime = 6
        elseif selected == "Afternoon" then
            game.Lighting.ClockTime = 16
        elseif selected == "Night" then
            game.Lighting.ClockTime = 0
        end
    end
})

Tabs.Main:AddButton("Run All Codes", function()
    local codes = {
        "Speedy50", "Epicreward500", "Launch250", "Musclestorm50",
        "Spacegems50", "Superpunch100", "Frostgems10", "Galaxycrystal50",
        "Skyagility50", "Supermuscle100", "Millionwarriors", "frostgems10",
        "epicreward500", "galaxycrystal50", "launch250", "spacegems50"
    }
    for _, code in ipairs(codes) do
        game:GetService("ReplicatedStorage").rEvents.codeRemote:InvokeServer(code)
    end
end)

Tabs.Main:AddToggle("Trade All Players", {
    Default = false,
    Callback = function(State)
        if State then
            for _, player in pairs(game.Players:GetPlayers()) do
                if player.Name ~= game.Players.LocalPlayer.Name then
                    game:GetService("ReplicatedStorage").rEvents.tradingEvent:FireServer("sendTradeRequest", player)
                end
            end
        end
    end
})

-- Killer Tab
Tabs.Killer:AddToggle("Auto Hit", {
    Default = false,
    Callback = function(State)
        -- Placeholder for auto-hit functionality
        if State then
            -- Implement auto-hit if needed
        end
    end
})

-- Settings Tab
SaveManager:SetLibrary(Fluent)
InterfaceManager:SetLibrary(Fluent)

SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({})
InterfaceManager:SetFolder("FluentScriptHub")
SaveManager:SetFolder("FluentScriptHub/specific-game")

InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Window:SelectTab(1)

Fluent:Notify({
    Title = "Fluent",
    Content = "The script has been loaded.",
    Duration = 8
})

SaveManager:LoadAutoloadConfig()
