local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Your Script Title",
    SubTitle = "by YourName",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

-- Create Tabs
local MainTab = Window:AddTab({ Title = "Main", Icon = "" })
local KillerTab = Window:AddTab({ Title = "Killer", Icon = "" })
local SettingsTab = Window:AddTab({ Title = "Settings", Icon = "" })

-- Main Tab Controls
MainTab:AddInput("Change Speed", {
    Default = "0",
    Numeric = true,
    Callback = function(value)
        local speed = tonumber(value) or 0
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = speed
    end
})

MainTab:AddInput("Change Size", {
    Default = "1",
    Numeric = true,
    Callback = function(value)
        local character = game.Players.LocalPlayer.Character
        if character then
            character.Humanoid.BodyScale.Value = tonumber(value) or 1
        end
    end
})

MainTab:AddDropdown("Game Time", {
    Options = {"Morning", "Afternoon", "Night"},
    Callback = function(selected)
        if selected == "Morning" then
            game.Lighting.ClockTime = 6
        elseif selected == "Afternoon" then
            game.Lighting.ClockTime = 16
        elseif selected == "Night" then
            game.Lighting.ClockTime = 0
        end
    end
})

MainTab:AddToggle("Run All Codes", {
    Default = false,
    Callback = function(state)
        if state then
            local codes = {
                "Speedy50", "Epicreward500", "Launch250", "Musclestorm50",
                "Spacegems50", "Superpunch100", "Frostgems10", "Galaxycrystal50",
                "Skyagility50", "Supermuscle100", "Millionwarriors", "frostgems10",
                "epicreward500", "galaxycrystal50", "launch250", "spacegems50"
            }
            for _, code in ipairs(codes) do
                game:GetService("ReplicatedStorage").rEvents.codeRemote:InvokeServer(code)
            end
        end
    end
})

MainTab:AddToggle("Trade All Players", {
    Default = false,
    Callback = function(state)
        if state then
            for _, player in pairs(game.Players:GetPlayers()) do
                if player ~= game.Players.LocalPlayer then
                    game:GetService("ReplicatedStorage").rEvents.tradingEvent:FireServer("sendTradeRequest", player)
                end
            end
        end
    end
})

-- Killer Tab Controls
KillerTab:AddToggle("Auto Hit", {
    Default = false,
    Callback = function(state)
        if state then
            local player = game.Players.LocalPlayer
            local backpack = player:WaitForChild("Backpack")

            local tools = {
                {name = "Punch", type = "attackTime"},
                {name = "Ground Slam", type = "attackTime"},
                {name = "Stomp", type = "attackTime"},
                {name = "Handstands", type = "repTime"},
                {name = "Pushups", type = "repTime"},
                {name = "Weight", type = "repTime"},
                {name = "Situps", type = "repTime"}
            }

            for _, toolInfo in pairs(tools) do
                local tool = backpack:FindFirstChild(toolInfo.name)
                if tool then
                    local cooldown = tool:FindFirstChild(toolInfo.type)
                    if cooldown then
                        cooldown.Value = 0.1
                    end
                end
            end
        end
    end
})

-- Settings Tab Controls
-- Add settings-related controls here if needed

Fluent:Init() -- Finalize the GUI setup
