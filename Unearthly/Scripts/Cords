-- Create ScreenGui and TextLabel
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
local textLabel = Instance.new("TextLabel")

-- Configure ScreenGui
screenGui.Name = "CoordinatesGui"
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Configure TextLabel
textLabel.Name = "CoordinatesLabel"
textLabel.Size = UDim2.new(0, 300, 0, 50) -- Size of the TextLabel
textLabel.Position = UDim2.new(0.5, -150, 0, 10) -- Centered at the top
textLabel.BackgroundTransparency = 0.5 -- Semi-transparent background
textLabel.TextColor3 = Color3.new(1, 1, 1) -- White text
textLabel.TextScaled = true -- Scale text to fit
textLabel.Parent = screenGui

-- Function to update coordinates
local function updateCoordinates()
    while wait(0.1) do
        local character = player.Character
        if character and character.PrimaryPart then
            local position = character.PrimaryPart.Position
            textLabel.Text = "Coordinates: (" .. math.floor(position.X) .. ", " .. math.floor(position.Y) .. ", " .. math.floor(position.Z) .. ")"
        end
    end
end

-- Start the update loop
updateCoordinates()
