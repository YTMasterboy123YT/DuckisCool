local player = game.Players.LocalPlayer
local playerCharacter = player.Character or player.CharacterAdded:Wait()

-- Create a reference to the TextLabel
local screenGui = player:WaitForChild("PlayerGui"):WaitForChild("ScreenGui")
local textLabel = screenGui:WaitForChild("TextLabel")

-- Function to update coordinates
local function updateCoordinates()
    while true do  -- This creates an infinite loop
        if playerCharacter and playerCharacter.PrimaryPart then
            local position = playerCharacter.PrimaryPart.Position
            textLabel.Text = "Coordinates: (" .. math.floor(position.X) .. ", " .. math.floor(position.Y) .. ", " .. math.floor(position.Z) .. ")"
        end
        wait(0.1)  -- Pause for a short duration (100ms) before the next update
    end
end

-- Start the update loop
updateCoordinates()
