local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

local muscleKingMountain = workspace:FindFirstChild("Muscle King Mountain")

if muscleKingMountain then
    local rock = muscleKingMountain:FindFirstChild("rock")  -- Adjust if the name is different

    if rock then
        rock.Size = Vector3.new(30, 30, 25)  -- Change the size
        while true do
            rock.Position = character.HumanoidRootPart.Position  -- Teleport to player
            wait(0.5)  -- Adjust delay as needed
        end
    else
        warn("Rock not found inside Muscle King Mountain.")
    end
else
    warn("Muscle King Mountain not found in Workspace.")
end
