local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Fluent " .. Fluent.Version,
    SubTitle = "by dawid",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl,
})

-- Create a new tab for the dropdown
local DropdownTab = Window:AddTab({
    Title = "Options",
    Icon = "", -- You can add an icon here if you want
})

-- Multi-dropdown for selecting multiple values
local MultiDropdown = DropdownTab:AddDropdown("MultiDropdown", {
    Title = "Select Options",
    Description = "You can select multiple values.",
    Values = {"one", "two", "three", "four", "five", "six", "seven", "eight", "nine", "ten", "eleven", "twelve", "thirteen", "fourteen"},
    Multi = true,
    Default = {"seven", "twelve"},
})

-- Notify that the dropdown is ready
Fluent:Notify({
    Title = "Dropdown Loaded",
    Content = "The multi-select dropdown is ready.",
    Duration = 5
})

-- Handle selection changes
MultiDropdown:OnChanged(function(selectedValues)
    print("Selected Values: ", table.concat(selectedValues, ", "))
end)
