local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Fluent " .. Fluent.Version,
    SubTitle = "by dawid",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl,
})

local Players = game:GetService("Players")

-- Create a new tab for the dropdown
local PlayerTab = Window:AddTab({
    Title = "Players",
    Icon = "", -- Optional: add an icon if desired
})

-- Function to get player names
local function getPlayerNames()
    local playerNames = {}
    for _, player in ipairs(Players:GetPlayers()) do
        table.insert(playerNames, player.Name)
    end
    return playerNames
end

-- Create the dropdown for player names
local PlayerDropdown = PlayerTab:AddDropdown("PlayerDropdown", {
    Title = "Select Player",
    Description = "Choose a player from the list.",
    Values = getPlayerNames(),
    Multi = false, -- Set to true if you want multiple selections
})

-- Refresh button to update player names
PlayerTab:AddButton("Refresh Players", function()
    PlayerDropdown:Refresh(getPlayerNames())
end)

-- Notify that the dropdown is ready
Fluent:Notify({
    Title = "Players Loaded",
    Content = "The player dropdown is ready.",
    Duration = 5
})

-- Handle selection changes
PlayerDropdown:OnChanged(function(selectedValue)
    print("Selected Player: ", selectedValue)
end)
