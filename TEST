local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Function to teleport the player's hands to the Frozen Rock
local function teleportHandsToFrozenRock()
    -- Attempt to find the Frozen Rock directly in the workspace
    local frozenRock = workspace:FindFirstChild("Frozen Rock") or workspace.MachinesFolder:FindFirstChild("Frozen Rock")

    if frozenRock and character then
        -- Move character's hands to the Frozen Rock's position
        character.HumanoidRootPart.CFrame = CFrame.new(frozenRock.Position + Vector3.new(0, 0, 2))  -- Offset to keep hands visible
        print("Teleported hands to Frozen Rock.")
    else
        if not frozenRock then
            print("Frozen Rock not found in the workspace or MachinesFolder!")
        end
        if not character then
            print("Character not found!")
        end
    end
end

-- Execute the teleport function
teleportHandsToFrozenRock()
