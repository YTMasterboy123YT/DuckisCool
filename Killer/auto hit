local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local punching = false
local toolName = "Punch"

local function autoUseTool()
    while punching do
        local character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
        local humanoid = character:FindFirstChildOfClass("Humanoid")
        local tool = LocalPlayer.Backpack:FindFirstChild(toolName) or character:FindFirstChild(toolName)

        if tool then
            if tool.Parent ~= character then
                humanoid:EquipTool(tool)
            end
            tool:Activate()
            wait(1) -- Adjust the wait time as necessary
        else
            wait(1) -- Wait before checking again if tool is not found
        end
    end
end

local function toggleAutoPunch(value)
    punching = value

    if punching then
        print("Auto-punching started.")
        autoUseTool()
    else
        print("Auto-punching stopped.")
    end
end

-- Example call to start/stop punching
toggleAutoPunch(true) -- Start
-- toggleAutoPunch(false) -- Call this to stop
