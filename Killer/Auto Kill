local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local Button1 = Instance.new("TextButton")
local Button2 = Instance.new("TextButton")
local Button3 = Instance.new("TextButton")
local StatusLabel = Instance.new("TextLabel")

-- Configure ScreenGui
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

-- Main Frame Setup
MainFrame.Name = "HackerPanel"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
MainFrame.BorderColor3 = Color3.fromRGB(0, 255, 0)
MainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
MainFrame.Size = UDim2.new(0, 450, 0, 350)
MainFrame.Active = true
MainFrame.Draggable = true

-- Title Setup
Title.Name = "Title"
Title.Parent = MainFrame
Title.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Title.BorderColor3 = Color3.fromRGB(0, 255, 0)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Font = Enum.Font.Code
Title.Text = "H4CK3R CONSOLE v1.0"
Title.TextColor3 = Color3.fromRGB(0, 255, 0)
Title.TextSize = 24

-- Status Label
StatusLabel.Name = "Status"
StatusLabel.Parent = MainFrame
StatusLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
StatusLabel.BorderColor3 = Color3.fromRGB(0, 255, 0)
StatusLabel.Position = UDim2.new(0.1, 0, 0.85, 0)
StatusLabel.Size = UDim2.new(0.8, 0, 0, 30)
StatusLabel.Font = Enum.Font.Code
StatusLabel.Text = "STATUS: READY"
StatusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
StatusLabel.TextSize = 16

-- Button Creation Function
local function CreateHackerButton(name, position, text)
    local button = Instance.new("TextButton")
    button.Name = name
    button.Parent = MainFrame
    button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    button.BorderColor3 = Color3.fromRGB(0, 255, 0)
    button.Position = position
    button.Size = UDim2.new(0, 180, 0, 50)
    button.Font = Enum.Font.Code
    button.Text = text
    button.TextColor3 = Color3.fromRGB(0, 255, 0)
    button.TextSize = 18
    
    -- Hover Effect
    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(0, 50, 0)
    end)
    
    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    end)
    
    return button
end

-- Create Buttons
local button1 = CreateHackerButton("Exploit1", UDim2.new(0.1, 0, 0.2, 0), "INITIATE_EXPLOIT")
local button2 = CreateHackerButton("Exploit2", UDim2.new(0.1, 0, 0.4, 0), "BYPASS_SECURITY")
local button3 = CreateHackerButton("Exploit3", UDim2.new(0.1, 0, 0.6, 0), "ACTIVATE_SYSTEM")

-- Button Functions
local function simulateHacking(button)
    local originalText = button.Text
    button.TextColor3 = Color3.fromRGB(255, 0, 0)
    StatusLabel.Text = "STATUS: EXECUTING..."
    wait(1)
    button.Text = "PROCESSING..."
    wait(0.5)
    button.Text = originalText
    button.TextColor3 = Color3.fromRGB(0, 255, 0)
    StatusLabel.Text = "STATUS: COMPLETE"
end

button1.MouseButton1Click:Connect(function()
    simulateHacking(button1)
end)

button2.MouseButton1Click:Connect(function()
    simulateHacking(button2)
end)

button3.MouseButton1Click:Connect(function()
    simulateHacking(button3)
end)
