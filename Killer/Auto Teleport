local player = game.Players.LocalPlayer
local offset = Vector3.new(0, 5, 0) -- Adjust the height above the character

-- Function to teleport all players' UpperTorso above the local player's character
local function teleportAllUpperTorso()
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

    while true do
        local targetPosition = humanoidRootPart.Position + offset

        for _, otherPlayer in pairs(game.Players:GetPlayers()) do
            if otherPlayer.Character then
                local upperTorso = otherPlayer.Character:FindFirstChild("UpperTorso")

                if upperTorso then
                    -- Teleport UpperTorso for all players
                    upperTorso.CFrame = CFrame.new(targetPosition) -- Set to target position
                end
            end
        end

        wait(0.1) -- Adjust the delay as needed (in seconds)
    end
end

-- Call the function
teleportAllUpperTorso()
