local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local leftHand = character:WaitForChild("LeftHand")
local rightHand = character:WaitForChild("RightHand")

-- Function to teleport hands above the character
local function teleportHands()
    local offset = Vector3.new(0, 5, 0) -- Adjust the height above the character

    -- Set the new positions for the hands
    leftHand.Position = humanoidRootPart.Position + offset + Vector3.new(-1, 0, 0) -- Left hand slightly to the left
    rightHand.Position = humanoidRootPart.Position + offset + Vector3.new(1, 0, 0) -- Right hand slightly to the right
end

-- Call the function (you can trigger this with an event if needed)
teleportHands()
