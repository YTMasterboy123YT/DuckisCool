local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Function to teleport your hands to all players
local function teleportHands()
    local leftHand = character:FindFirstChild("LeftHand")
    local rightHand = character:FindFirstChild("RightHand")
    local originalLeftPosition = leftHand.Position
    local originalRightPosition = rightHand.Position

    for _, targetPlayer in pairs(game.Players:GetPlayers()) do
        if targetPlayer ~= player and targetPlayer.Character then
            local targetHumanoidRootPart = targetPlayer.Character:FindFirstChild("HumanoidRootPart")
            if targetHumanoidRootPart then
                -- Teleport hands to the target player's position
                leftHand.Position = targetHumanoidRootPart.Position + Vector3.new(-1, 0, 0) -- Adjust for left hand
                rightHand.Position = targetHumanoidRootPart.Position + Vector3.new(1, 0, 0) -- Adjust for right hand
            end
        end
    end

    wait(0.5) -- Wait for 0.5 seconds

    -- Return hands to original positions
    leftHand.Position = originalLeftPosition
    rightHand.Position = originalRightPosition
end

-- Call the function
teleportHands()
