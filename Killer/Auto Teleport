local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TeleportArmsEvent = Instance.new("RemoteEvent")
TeleportArmsEvent.Name = "TeleportArmsEvent"
TeleportArmsEvent.Parent = ReplicatedStorage

local player = game.Players.LocalPlayer

-- Function to teleport arms on the server
local function teleportArms(position)
    local players = game.Players:GetPlayers()
    for _, p in ipairs(players) do
        if p.Character and p.Character:FindFirstChild("RightArm") and p.Character:FindFirstChild("LeftArm") then
            p.Character.RightArm.Position = position
            p.Character.LeftArm.Position = position
        end
    end
end

-- Listen for RemoteEvent from the client
TeleportArmsEvent.OnServerEvent:Connect(teleportArms)

-- Function to handle chat messages
local function onChatMessage(message)
    if message:lower() == "hello" then
        local character = player.Character or player.CharacterAdded:Wait()
        if character and character.PrimaryPart then
            local position = character.PrimaryPart.Position + Vector3.new(0, 10, 0) -- 10 studs above
            TeleportArmsEvent:FireServer(position)
        end
    end
end

-- Connect to the Player's chat
player.Chatted:Connect(onChatMessage)
