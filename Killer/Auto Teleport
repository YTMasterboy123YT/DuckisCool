local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

local function teleportArmsAbove()
    local players = game.Players:GetPlayers()
    local position = character.PrimaryPart.Position + Vector3.new(0, 10, 0)  -- 10 studs above your character
    
    for _, p in ipairs(players) do
        if p.Character and p.Character:FindFirstChild("RightArm") and p.Character:FindFirstChild("LeftArm") then
            p.Character.RightArm.Position = position
            p.Character.LeftArm.Position = position
        end
    end
end

-- Example usage: teleport arms when the player clicks a button or a specific event occurs
teleportArmsAbove()
