local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local offset = Vector3.new(0, 5, 0) -- Adjust the height above the character

-- Function to teleport hands above the local player's character
local function teleportHands()
    for _, otherPlayer in pairs(game.Players:GetPlayers()) do
        if otherPlayer.Character then
            local leftHand = otherPlayer.Character:FindFirstChild("LeftHand")
            local rightHand = otherPlayer.Character:FindFirstChild("RightHand")

            if leftHand and rightHand then
                -- Teleport hands to the local player's position
                leftHand.Position = humanoidRootPart.Position + offset + Vector3.new(-1, 0, 0) -- Left hand slightly to the left
                rightHand.Position = humanoidRootPart.Position + offset + Vector3.new(1, 0, 0) -- Right hand slightly to the right
            end
        end
    end
end

-- Call the function (you can trigger this with an event if needed)
teleportHands()
