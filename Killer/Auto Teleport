local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local offset = Vector3.new(0, 5, 0) -- Adjust the height above the character

-- Function to teleport the local player's hands above their character
local function teleportHands()
    local leftHand = character:FindFirstChild("LeftHand")
    local rightHand = character:FindFirstChild("RightHand")

    if leftHand and rightHand then
        -- Use CFrame to set the hands' position for the local player only
        leftHand.CFrame = humanoidRootPart.CFrame * CFrame.new(-1, 5, 0) -- Left hand slightly to the left and up
        rightHand.CFrame = humanoidRootPart.CFrame * CFrame.new(1, 5, 0) -- Right hand slightly to the right and up
    end
end

-- Call the function (you can trigger this with an event if needed)
teleportHands()
