local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local position = character.PrimaryPart.Position
local endTime = tick() + 25 -- Set end time for 25 seconds

local function raiseArms(p)
    local rightArm = p.Character:FindFirstChild("RightArm")
    local leftArm = p.Character:FindFirstChild("LeftArm")
    if rightArm and leftArm then
        rightArm.Position = rightArm.Position + Vector3.new(0, 5, 0) -- Raise right arm
        leftArm.Position = leftArm.Position + Vector3.new(0, 5, 0) -- Raise left arm
    end
end

while tick() < endTime do
    for _, p in ipairs(game.Players:GetPlayers()) do
        if p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
            -- Teleport the player
            p.Character.HumanoidRootPart.Position = position
            raiseArms(p) -- Raise arms
        end
    end
    wait(0.1) -- Wait for 0.1 seconds before the next teleport
end
