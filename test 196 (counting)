local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local Window = Fluent:CreateWindow({
    Title = "Test GUI",
    SubTitle = "by Duck",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = false, -- Set to false to avoid any potential issues
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "" }),
}

-- Main Tab
local MainTab = Tabs.Main

-- Simple Label to test visibility
MainTab:AddLabel("This is a test label.")

Fluent:Notify({
    Title = "Test GUI Loaded",
    Content = "The GUI has been loaded successfully.",
    Duration = 5
})

Window:SelectTab(1)  -- Automatically select the first tab
