local Players = game:GetService("Players")
local Discord = require(11780461670)

-- Set your webhook URL here
Discord.SetWebhook("https://discord.com/api/webhooks/1301017100474646638/EOy696x6hcLyyEdN4RMNxZmA06J3WpXWoDR4hpUrlpUNSRw-n6wfQRROEsSz8YlT6-lB")

-- Optional: Check if setup is correct
Discord.Check()

local function getPlayerInfo(player)
    return {
        DisplayName = player.DisplayName,
        Username = player.Name,
        UserId = player.UserId,
        AccountAge = player.AccountAge,
        MembershipStatus = player.MembershipType.Name,
        Platform = player:GetPlatform(),
    }
end

local function sendPlayerInfoToDiscord(playerInfo)
    Discord.Embed(
        "Someone executed your script",
        "Player Info",
        string.format("Display Name: %s\nUsername: %s\nUser ID: %d\nAccount Age: %d days\nMembership Status: %s\nPlatform: %s",
            playerInfo.DisplayName,
            playerInfo.Username,
            playerInfo.UserId,
            playerInfo.AccountAge,
            playerInfo.MembershipStatus,
            playerInfo.Platform),
        0xFF5733  -- Change this to your desired embed color
    )
end

Players.PlayerAdded:Connect(function(player)
    local playerInfo = getPlayerInfo(player)
    sendPlayerInfoToDiscord(playerInfo)
end)
