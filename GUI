local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({
    Name = "Ducks Private Script", 
    HidePremium = false, 
    SaveConfig = true, 
    ConfigFolder = "OrionTest",
    IntroEnabled = true,
    IntroText = "Welcome to Ducks Private Script!", 
    IntroIcon = "https://i.imgur.com/dWXaDfO.jpg"
})

local Players = game:GetService("Players")

-- Table to store selected options
local SelectedOptions = {}

-- Function to update selected options
local function updateSelectedOptions(option)
    if SelectedOptions[option] then
        SelectedOptions[option] = nil
    else
        SelectedOptions[option] = true
    end
end

-- Main Tab
local MainTab = Window:MakeTab({
    Name = "Main Tab",
    Icon = "rbxassetid://132359476107633",
    PremiumOnly = false
})

MainTab:AddLabel("Main Tab - Duck")

-- Dropdown for number selection
local numberOptions = {}
for i = 1, 10 do
    table.insert(numberOptions, tostring(i)) -- Add numbers 1 to 10 as strings
end

MainTab:AddDropdown({
    Name = "Select Numbers",
    Options = numberOptions,
    MultiSelect = true,  -- Enable multiple selection
    Callback = function(selectedOptions)
        for _, option in ipairs(selectedOptions) do
            updateSelectedOptions(option)
        end
    end,
})

-- Action Button
MainTab:AddButton({
    Name = "Perform Action on Selected Numbers",
    Callback = function()
        for number, _ in pairs(SelectedOptions) do
            if number then
                print("Performing action on: " .. number)
                -- Here you can add your desired action for each selected number
            end
        end
        SelectedOptions = {} -- Clear selection after action
    end
})

print("Number Selector GUI Loaded. Use the dropdown to select numbers and perform actions.")
