local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- Create the main window
local MainWindow = OrionLib:MakeWindow({
    Name = "Multi-Select Example",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "MultiSelectConfig",
    IntroEnabled = true,
    IntroText = "Welcome to the Multi-Select GUI!",
    IntroIcon = "https://i.imgur.com/dWXaDfO.jpg"
})

local Players = game:GetService("Players")

-- Gather player names for the dropdown
local playerNames = {}
for _, player in ipairs(Players:GetPlayers()) do
    table.insert(playerNames, player.Name)
end

-- Create the tab for the multi-select feature
local MultiSelectTab = MainWindow:MakeTab({
    Name = "Multi-Select",
    Icon = "rbxassetid://132359476107633",
    PremiumOnly = false
})

MultiSelectTab:AddLabel("Select Multiple Players")

-- Dropdown for selecting multiple players
MultiSelectTab:AddDropdown({
    Name = "Select Players",
    Options = playerNames, -- List of player names
    MultiSelect = true, -- Enable multiple selection
    Callback = function(selectedOptions)
        -- This function will be called with the selected players
        print("Selected Players: ", table.concat(selectedOptions, ", "))
    end,
})

-- Button to perform an action with the selected players
MultiSelectTab:AddButton({
    Name = "Perform Action",
    Callback = function()
        -- Get selected players from the dropdown
        local selectedPlayers = MultiSelectTab.Flags["Dropdown1"] -- Replace "Dropdown1" with your dropdown's flag if different

        if #selectedPlayers > 0 then
            for _, playerName in ipairs(selectedPlayers) do
                local player = Players:FindFirstChild(playerName)
                if player then
                    print("Performing action on: " .. playerName)
                    -- Perform your desired action on the player
                end
            end
        else
            print("No players selected.")
        end
    end,
})

print("GUI Loaded. Use the dropdown to select players and perform actions.")
