local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source.lua"))()
local player = game.Players.LocalPlayer
local backpack = player:WaitForChild("Backpack")

local Window = OrionLib:MakeWindow({Name = "Speed Hub X", Icon = "rbxassetid://12345678", HidePremium = false})

-- Main Tab
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://12345678",
    Premium = false,
})

MainTab:AddInput("Size", {
    Default = "1",
    Numeric = true,
    Callback = function(Value)
        local sizeValue = tonumber(Value)
        if sizeValue then
            game.ReplicatedStorage.rEvents.changeSpeedSizeRemote:InvokeServer("changeSize", sizeValue)
        end
    end
})

MainTab:AddInput("Speed", {
    Default = "16",
    Numeric = true,
    Callback = function(Value)
        local speedValue = tonumber(Value)
        if speedValue then
            game.ReplicatedStorage.rEvents.changeSpeedSizeRemote:InvokeServer("changeSpeed", speedValue)
        end
    end
})

MainTab:AddDropdown("DaylightSystem", {
    Name = "Select Daylight",
    Options = {"Noon", "Evening", "Night", "Dawn"},
    Callback = function(selected)
        if selected == "Noon" then
            game.Lighting.TimeOfDay = "12:00:00"
        elseif selected == "Evening" then
            game.Lighting.TimeOfDay = "18:00:00"
        elseif selected == "Night" then
            game.Lighting.TimeOfDay = "00:00:00"
        elseif selected == "Dawn" then
            game.Lighting.TimeOfDay = "06:00:00"
        end
    end
})

-- Killer Tab
local KillerTab = Window:MakeTab({
    Name = "Killer",
    Icon = "rbxassetid://12345678",
    Premium = false,
})

local function autoHit()
    while true do
        local equippedTool = player.Character:FindFirstChildOfClass("Tool")
        if equippedTool and equippedTool.Enabled then
            equippedTool:Activate()
        end
        wait(0.1)
    end
end

KillerTab:AddToggle("Auto Hit", {
    Name = "Enable Auto Hit",
    Default = false,
    Callback = function(State)
        if State then
            autoHit()
        end
    end
})

-- TOOLSpeed Tab
local TOOLSpeedTab = Window:MakeTab({
    Name = "TOOLSpeed",
    Icon = "rbxassetid://12345678",
    Premium = false,
})

local toolsToSet = {
    {"Punch", "attackTime", 0.1},
    {"Ground Slam", "attackTime", 0.1},
    {"Stomp", "attackTime", 0.1},
    {"Handstands", "repTime", 0.1},
    {"Pushups", "repTime", 0.1},
    {"Weight", "repTime", 0.1},
    {"Situps", "repTime", 0.1}
}

local function createOrGetIntValue(toolName, attributeType)
    local tool = backpack:FindFirstChild(toolName)
    if tool then
        local attribute = tool:FindFirstChild(attributeType)
        if not attribute then
            attribute = Instance.new("IntValue")
            attribute.Name = attributeType
            attribute.Parent = tool
        end
        return attribute
    end
    return nil
end

local function setToolAttributes(toolName, attributeType, value)
    local intValue = createOrGetIntValue(toolName, attributeType)
    if intValue then
        intValue.Value = value
    end
end

for _, tool in ipairs(toolsToSet) do
    TOOLSpeedTab:AddInput(tool[1] .. " Speed", {
        Default = tostring(tool[3]),
        Numeric = true,
        Callback = function(Value)
            setToolAttributes(tool[1], tool[2], tonumber(Value) or 0.1)
        end
    })
end

-- Misc Tab
local MiscTab = Window:MakeTab({
    Name = "Misc",
    Icon = "rbxassetid://12345678",
    Premium = false,
})

MiscTab:AddLabel("Miscellaneous Features")

-- Start auto-hitting if enabled
player.CharacterAdded:Connect(function()
    backpack = player:WaitForChild("Backpack")
    for _, tool in ipairs(toolsToSet) do
        setToolAttributes(tool[1], tool[2], tool[3])
    end
end)

-- Notify when the script is loaded
OrionLib:MakeNotification({
    Name = "Loaded",
    Content = "The script has been loaded.",
    Duration = 5
})

-- Show the GUI
OrionLib:Init()
